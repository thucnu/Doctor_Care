<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Get CRUD</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
</head>
<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
    a.btn-edit{
        outline: none;
        background-color: orange;
        border: none;
        height: 25px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
    }
    a.btn-delete{
        outline: none;
        background-color: #ff0023;
        border: none;
        height: 25px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
    }
</style>
<body>
    <table style="width:100%">
        <tr>
          <th>Email</th>
          <th>Firstname</th> 
          <th>Lastname</th>
          <th>Address</th>
          <th>Actions</th>
        </tr>
        
        <% for(var i=0; i < dataTable.length; i++) { %>
            <tr>
              <td><%= dataTable[i].email %></td>
              <td><%= dataTable[i].firstName %></td>
              <td><%= dataTable[i].lastName %></td>
              <td><%= dataTable[i].address %></td>
              <td>
                  <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" >Edit</a>
                  <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete">Delete</a>
                </td>
            </tr>
         <% } %>
      </table>
</body>
</html>